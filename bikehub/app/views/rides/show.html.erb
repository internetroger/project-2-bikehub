<h1>Ride Page</h1>

<h3>User: <%= link_to "#{@user.username}", @user %></h3>
<h3>Bike: <%= "#{@bike.manufacturer_name} #{@bike.frame_model}" %></h3>
<h4>Distance: <%= "#{@ride.distance / 1000} kilometers" %></h4>
<h4>Duration: <%= "#{(@ride.duration / 60).round(2)} minutes" %>

<h2>Comments</h2>
    <% @ride.comments.each do |comment| %>
        <h3><%= comment.user.username %> says:</h3>
        <p><strong><%= "#{comment.title}" %></strong></p>
        <p><%= "#{comment.content}" %></p>
    <% end %>

<%# form to add a new comment %>
<%= form_for @comment, url: ride_comment_path do |f| %>
    <%= f.label "Title" %>
    <%= f.text_field :title %>
    <%= f.label "Content" %>
    <%= f.text_area :content %>
    <%= f.submit %>
<% end %>
